<h2>Album Name: <%= @album.name %></h2>

<h3>Album Songs</h3>

  <% if @album.songs %>
    <ul>
      <% @album.songs.each do |song| %>
        <li><a href="/albums/<%= @album.id %>/songs/<%= song.id %>"><%= song.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no songs listed for this album yet.</p>
  <% end %>

<h4>Add a song:</h4>

<form action="/albums/<%= @album.id %>/songs" method="post">
  <div class="form-group">
    <label for="song_name">Song name</label>
    <input id="song_name" name="song_name" class="form-control" type="text">
    <label for="artist_name">Artist name</label>
    <input id="artist_name" name="artist_name" class="form-control" type="text">
    <label for="year_recorded">Year Recorded</label>
    <input id="year_recorded" name="year_recorded" class="form-control" type="text">
    <label for="studio">Studio</label>
    <input id="studio" name="studio" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add song</button>
</form>

<form action="/albums/<%= @album.id() %>/buy" method="get">
  <input name="_method" type="hidden" value="buy">
  <button type="submit">Buy Album</button>
</form>
<form action="/albums/<%= @album.id() %>/edit" method="get">
  <input name="_method" type="hidden" value="edit">
  <button type="submit">Edit Album</button>
</form>

<p><a href="/albums">Return to album list</a></p>
