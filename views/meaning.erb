<h2>The word is: <%= @meaning.name %></h2>
<ul>
  <li>This is what it means: <%= @meaning.word.name %></li>
</ul>

<form action="/words/<%= @meaning.word.id %>/meanings/<%= @meaning.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">change meaning</label>
  <input id="name" name="name" type="text" value="<%= @meaning.name %>">
  <button type="submit">Update meaning</button>
</form>

<form action="/words/<%= @meaning.word.id %>/meanings/<%= @meaning.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete meaning</button>
</form>

<a href="/words/<%= @meaning.word.id %>">Back to <%= @meaning.word.name %></a>
